@model RentalDetailVM
@{
    ViewData["Title"] = "Index";
}

<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Car Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total Price</th>
                        </tr>
                    </thead>
                    <tbody>
                      
                            <tr>
                            <td><img src="~/images/car/@(Model.Rental.Car.Image==null?"empty.jpg":Model.Rental.Car.Image)" width="70px" /></td>
                                <td>@Model.Rental.Car.Brand</td>

                            <td>@Model.Rental.Car.Price.ToString("0.00") TL</td>
@*                                 <td>@((item.Product.Price * item.Quantity).ToString("0.00")) TL</td>
 *@                            </tr>
                        
                        <tr>
                            <td colspan="4" class="text-align-rigth">
                                <strong>Total Price</strong>
                            </td>
                            <td>
                                <span class="h2">@Model.Rental.TotalPrice.ToString("0.00") TL</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <a class="btn btn-primary float-start" asp-controller="Home" asp-action="Index">Alışverişe Devam Et</a>
                <a class="btn btn-success float-end" asp-controller="Payment" asp-action="CompleteShopping">Alışverişi Tamamla</a>
            </div>
        </div>
    </div>
</form> 