@model List<Car>

@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #333;
            color: white;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 90%;
            margin: auto;
            padding: 20px;
        }

        .search-box {
            display: flex;
            justify-content: start;
            margin-bottom: 20px;
        }

            .search-box .form-group {
                margin-right: 10px;
            }

        .card {
            background-color: #222;
            border: 1px solid #444;
            margin-bottom: 20px;
            padding: 20px;
            border-radius: 5px;
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: scale(1.05);
            }

            .card img {
                width: 100%;
                height: auto;
                object-fit: cover;
                border-radius: 5px;
            }

            .card h3, .card h4, .card p {
                margin: 10px 0;
                color: #ddd;
            }

                .card h3 a {
                    color: #ddd;
                    text-decoration: none;
                    border-bottom: none;
                }

                    .card h3 a:hover {
                        color: #fff;
                    }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            margin-right: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #0056b3;
        }

            .btn-primary:hover {
                background-color: #007bff;
            }

        .btn-danger {
            background-color: #b30000;
        }

            .btn-danger:hover {
                background-color: #ff0000;
            }

        .btn-success {
            background-color: #008f68;
        }

            .btn-success:hover {
                background-color: #00af87;
            }

        .form-control {
            margin-bottom: 10px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #555;
            background-color: #222;
            color: #ddd;
        }
    </style>
</head>
<body>

    <div class="search-box">
        <form asp-controller="Home" asp-action="Index" method="get" class="form-group">
            <input type="text" class="form-control" id="brand" name="brand" value="@ViewData["CurrentFilter"]" placeholder="Search by brand...">
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>

    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 p-2">
                    <div class="card">
                        <img src="~/images/car/@(item.Image==null?"empty.jpg":item.Image)" class="card-img-top" />
                        <div class="card-body">
                            <h3><a href="~/Customer/Home/Detail/@item.Id">@item.Brand?.Name</a></h3>
                            <h4>Price: @item.Price.ToString("c")</h4>
                            <h4>Year: @item.Year</h4>
                            <p>Doors: @(item.DoorNumber.ToString())</p>
                            <a href="~/Customer/Home/Detail/@item.Id" class="btn btn-@(item.IsStatus == true ? "primary" : "danger")">Rent This Car</a>
                            <a href="~/Customer/Home/Detail/@item.Id" class="btn btn-success">Car Detail</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html>